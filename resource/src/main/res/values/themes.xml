<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Template" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/autoTransition</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/color_gray_hint</item>
        <item name="boxStrokeErrorColor">@color/color_gray_hint</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:drawableTint">@color/color_gray_hint</item>
        <item name="android:drawablePadding">@dimen/space_smaller</item>
        <item name="android:paddingStart">@dimen/space_default</item>
        <item name="android:paddingEnd">@dimen/space_default</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:textColorHint">@color/color_gray_hint</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/FontRegular.14</item>
    </style>

</resources>